<div class="main-panels " >
    <div class="content-wrapper ">
        <div class="container">
            <div class="col-lg-12 ">
                <div class="card">
                    <div class="card-body">
                        <div class="col-12 col-xl-8 mb-xl-0">
                            {{!-- <h3 class="font-weight-bold text-capitalize ">{{school.schoolname}}</h3> --}}
                            <h6 class="font-weight-bold text-capitalize text-muted">All Orders</h6>
                            {{!-- <h6 class="font-weight-normal text-capitalize text-muted">Registered
                                {{school.regdate}}</h6> --}}
                            {{!-- <h6 class="font-weight-normal mb-0">All systems are running smoothly!</h6> --}}
                        </div>
                        {{!-- <a href="" class="btn btn-behance px-3 py-2" data-bs-toggle="modal"
                            data-bs-target="#exampleModal">
                            Add Class
                        </a> --}}

                        
                        <br>
                        <div class="row px-3">



                            {{#if orders}}
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr class="text-center">
                                            {{!-- <th>Orders</th> --}}
                                            <th>Items</th>
                                            <th>Avatar</th>
                                            <th>Package</th>
                                            <th>Quantity</th>
                                            <th>Unit Price <small class="text-muted">AED</small></th>
                                            <th>Gross <small class="text-muted">AED</small></th>
                                            
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        {{#each orders}}


                                        <tr class="text-center">
                                            <td class="text-capitalize">
                                                {{!-- <input type="checkbox"  value={{ordercode}} name="ordercode" id="lov{{@index}}"> --}}
                                                <label for="lov{{@index}}">Item {{ @index }}</label>
                                            </td>
                                            <td>
                                                <a href={{orderavatar}} class="p-0">
                                                    <img src={{orderavatar}} alt="" style="object-fit:contain;">
                                                </a>

                                            </td>
                                            <td>
                                                {{packagename}}


                                            </td>
                                            <td>{{quantity}}</td>
                                            <td><span class="tofix">{{priceperpackage}}</span></td>
                                            <td><span class="tofix">{{totalunitsprice}}</span></td>
                                            <td><a href="/parent/deletefromparent/{{ordercode}}"><i class="text-danger fa fa-trash"></i></a></td>
                                            {{!-- <td>na</td> --}}

                                        </tr>



                                        {{/each}}



                                    </tbody>
                                </table>


                            </div>


                            {{else}}
                            <h4 class="m-auto text-center text-muted">No Orders yet</h4>
                            {{/if}}
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>