<div class="main-panel">
    <div class="content-wrapper">
        <div class="container">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="col-12 col-xl-8 mb-4 mb-xl-0">
                            <h3 class="font-weight-bold text-capitalize ">{{school.schoolname}}</h3>
                            <h6 class="font-weight-bold text-capitalize text-muted">All Students</h6>
                            <h6 class="font-weight-normal text-capitalize text-muted">Registered {{school.regdate}}</h6>
                            {{!-- <h6 class="font-weight-normal mb-0">All systems are running smoothly!</h6> --}}
                        </div>
                        <a href="" class="btn btn-behance px-3 py-2" data-bs-toggle="modal" data-bs-target="#exampleModal">
                            Add Class
                        </a>
                        
                        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Add Class</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                        
                                    <div class="modal-body">
                                        <form action="/admin/addclass" class="forms-sample" method="post">
                                            <div class="form-group">
                                                {{!-- <label for="exampleInputName1">Class</label> --}}
                                                <input type="text" name="class" class="form-control" id="exampleInputName1"
                                                    placeholder="Add class" />
                                            </div>
                                            <button type="submit" class="btn btn-primary">
                                                Add Class
                                            </button>
                                        </form>
                                    </div>
                        
                                </div>
                            </div>
                        </div>
                        <br>
                        <div class="row px-3">



                            {{#if students }}
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            {{!-- <th>Orders</th> --}}
                                            <th>Full Name</th>
                                            <th>Class</th>
                                            <th>Prescence</th>
                                            <th>Last seen</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        {{#each students}}


                                        <tr>
                                            {{!-- <td class="py-1">
                                                <img src={{profileimage}} alt="image" />
                                            </td> --}}
                                            <td>
                                                <a href="/admin/indstudents/{{userid}}"
                                                    style="width: 100%;text-align:start;"
                                                    class="bgh py-3 w-100  text-dark  rounded-lg mt-3 text-capitalize">

                                                    {{name}}


                                                </a>

                                            </td>
                                            <td>
                                                <a href="/admin/indstudents/{{userid}}" style="width: 100%;"
                                                    class="  py-3 w-100 rounded-lg mt-3  text-dark text-capitalize">

                                                    {{classs}}


                                                </a>


                                            </td>
                                            <td>{{logintimes}}</td>
                                            <td>{{lastseen}}</td>
                                            <td><a style="font-family: cursive;color:red;"
                                                    href="/admin/delete/{{userid}}">Delete</a></td>

                                        </tr>



                                        {{/each}}



                                    </tbody>
                                </table>


                            </div>


                            {{else}}
                            <h4 class="text-center text-muted">No registered students yet</h4>
                            {{/if}}
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>