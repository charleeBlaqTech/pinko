<style>
    html {
        box-sizing: border-box;
    }

    *,
    *:before,
    *:after {
        box-sizing: inherit;
    }

    body {
        margin: 0;
        min-height: 40vh;
        font-size: 1rem;
        line-height: 1.25;
        background-color: #18222d;
    }

    .grid {
        width: 80%;

        margin-left: auto;
        margin-right: auto;

        display: flex;
        -webkit-box-orient: horizontal;
        -webkit-box-direction: normal;
        flex-direction: row;
        flex-wrap: wrap;
    }

    .grid-block {
        max-width: 60vw;
        width: 30%;

    }

    .image-grid {
        -webkit-transform: rotateX(0deg) rotateZ(0deg);
        transform: rotateX(0deg) rotateZ(0deg);
        -webkit-perspective: 1000px;
        perspective: 1000px;
        height: 80vh;

        overflow-y: auto;
    }

    @media screen and (max-width:913px) {
        .image-grid {
            display: grid;
            grid-template-columns: 1fr;
        }

        .grid-block {
            width: 100%;


        }
    }

    .image-grid .tile-link:hover .tile-img {
        top: -1rem;
        left: -1rem;



    }

    .image-grid .tile-img {
        position: relative;
        top: 0;
        left: 0;
        height: 30vh;
        width: 100%;
        -webkit-transition-property: opacity, top, left, box-shadow;
        transition-property: opacity, top, left, box-shadow;
    }

    .tile-link {
        display: block;
    }

    .tile-link:hover .tile-img {
        opacity: 1;
    }

    .tile-link:hover .tile-img-link {
        display: block;
    }

    .tile-link:hover .tile-img-link:hover .tile-img {
        opacity: 0.5;
    }

    .tile-img {
        display: block;
        width: 100%;
        height: 40vh;
        opacity: 1;
        padding: 0;
        margin: 0;
        -webkit-transition-property: opacity;
        transition-property: opacity;
        -webkit-transition-duration: 0.125s;
        transition-duration: 0.125s;
        -webkit-transition-timing-function: ease-in;
        transition-timing-function: ease-in;
    }

    .tile-link:hover :first-child {
        box-shadow: 5px 5px rgba(244, 170, 200, 0.4),
            10px 10px rgba(244, 170, 200, 0.3), 15px 15px rgba(244, 170, 200, 0.2),
            20px 20px rgba(244, 170, 200, 0.1), 25px 25px rgba(244, 170, 200, 0.05);
    }

    .tile-link:hover .tile-img2 {
        box-shadow: 5px 5px rgba(45, 186, 233, 0.4), 10px 10px rgba(45, 186, 233, 0.3),
            15px 15px rgba(45, 186, 233, 0.2), 20px 20px rgba(45, 186, 233, 0.1),
            25px 25px rgba(45, 186, 233, 0.05);
    }

    .tile-link:hover .tile-img3 {
        box-shadow: 5px 5px rgba(214, 221, 244, 0.4),
            10px 10px rgba(214, 221, 244, 0.3), 15px 15px rgba(214, 221, 244, 0.2),
            20px 20px rgba(214, 221, 244, 0.1), 25px 25px rgba(214, 221, 244, 0.05);
    }

    .tile-link:hover .tile-img4 {
        box-shadow: 5px 5px rgba(82, 119, 192, 0.4), 10px 10px rgba(82, 119, 192, 0.3),
            15px 15px rgba(82, 119, 192, 0.2), 20px 20px rgba(82, 119, 192, 0.1),
            25px 25px rgba(82, 119, 192, 0.05);
    }

    .tile-link:hover .tile-img5 {
        box-shadow: 5px 5px rgba(138, 218, 245, 0.4),
            10px 10px rgba(138, 218, 245, 0.3), 15px 15px rgba(138, 218, 245, 0.2),
            20px 20px rgba(138, 218, 245, 0.1), 25px 25px rgba(138, 218, 245, 0.05);
    }

    .tile-link:hover .tile-img6 {
        box-shadow: 5px 5px rgba(203, 215, 193, 0.4),
            10px 10px rgba(203, 215, 193, 0.3), 15px 15px rgba(203, 215, 193, 0.2),
            20px 20px rgba(203, 215, 193, 0.1), 25px 25px rgba(203, 215, 193, 0.05);
    }

    .tile-link:hover .tile-img7 {
        box-shadow: 5px 5px rgba(91, 209, 250, 0.4), 10px 10px rgba(91, 209, 250, 0.3),
            15px 15px rgba(91, 209, 250, 0.2), 20px 20px rgba(91, 209, 250, 0.1),
            25px 25px rgba(91, 209, 250, 0.05);
    }

    .tile-link:hover .tile-img8 {
        box-shadow: 5px 5px rgba(145, 156, 196, 0.4),
            10px 10px rgba(145, 156, 196, 0.3), 15px 15px rgba(145, 156, 196, 0.2),
            20px 20px rgba(145, 156, 196, 0.1), 25px 25px rgba(145, 156, 196, 0.05);
    }

    .tile-link:hover .tile-img9 {
        box-shadow: 5px 5px rgba(188, 97, 129, 0.4), 10px 10px rgba(188, 97, 129, 0.3),
            15px 15px rgba(188, 97, 129, 0.2), 20px 20px rgba(188, 97, 129, 0.1),
            25px 25px rgba(188, 97, 129, 0.05);
    }

    .tile-link:hover .tile-img10 {
        box-shadow: 5px 5px rgba(4, 140, 231, 0.4), 10px 10px rgba(4, 140, 231, 0.3),
            15px 15px rgba(4, 140, 231, 0.2), 20px 20px rgba(4, 140, 231, 0.1),
            25px 25px rgba(4, 140, 231, 0.05);
    }

    .fa-trash:hover {
        animation: roll 2s linear infinite alternate-reverse;
    }

    @keyframes roll {
        from {
            transform: rotateX(0deg);
            color: rgb(109, 62, 62);

        }

        to {
            transform: rotateY(180deg);
            color: greenyellow;

        }

        to {
            transform: rotateY(180deg);
            color: green;

        }
    }

    .diva {
        display: grid;
        grid-template-columns: 1fr 1fr;
        column-gap: 9px;
    }

    @media screen and(max-width:991px) {
        .diva {

            grid-template-columns: 1fr;
        }

    }
</style>




<div class="main-panel">

    <div class="content-wrapper">
        <div class="container">

            <div class="col-12 grid-margin stretch-card">

                <div class="card">



                    <div class="card-body">
                        
                        <div style="display: flex;justify-content:space-between;flex:0 1 auto;flex-wrap:wrap;">
                            <div>
                                <h1 class="card-title " style="cursor: pointer;" data-bs-toggle="modal" data-bs-target="#exampleModal">{{student.name}}
                                    <i class="fa fa-edit"></i></h1>
                                
                                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">Edit Name</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <form action="/admin/changename/{{student.userid}}" class="forms-sample" enctype="multipart/form-data"
                                                    method="post">
                                
                                                    <div class="form-group">
                                                        <label for="exampleInputName1" class="text-capitalize">Change
                                                            {{student.name}}'s Name to:</label>
                                                        <input type="text" class="form-control" name="names" id="exampleInputName1"
                                                            placeholder=" Enter new name here" value="{{student.name}}" required />
                                                    </div>
                                
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                        <button type="submit" class="btn btn-primary">Save Name</button>
                                                    </div>
                                                </form>
                                            </div>
                                
                                        </div>
                                    </div>
                                </div>
                                
                                <h4 class="text-capitalize">{{student.schoolname}}</h4>
                                
                                <h4 class="card-title text-muted">{{student.classs}}</h4>

                            </div>
                            <div class="w-45">
                                <p>Student code</p>
                                <h6 class="text-success" id="clipr">copied to clipboard </h6>

                                <div class="diva" style="display: flex;flex-wrap:wrap;">
                                    <span class="btn btn-primary px-3 py-2 text-capitalize ccopy w-70 w-col-lg-50" onclick="clickpar()">
                                        Copy: <span id="clickpar">{{student.signparent}}</span>
                                    </span>

                                    <a href="/admin/schoolcode/{{student.userid}}"
                                        class="btn fs-30 px-3 py-2 text-capitalize text-light w-70 lg-w-50" style="background-color: rgb(80, 226, 207);">
                                        Regenerate
                                    </a>
                                </div>

                                {{!-- <p class="card-description">Upload page</p> --}}
                            </div>
                        </div>
                        <br>
                        

                        {{!-- <form action="" method="" enctype="multipart/form-data" id="exam"></form> --}}

                        <div class="multiple-uploader" id="multiple-uploader">
                            <div class="mup-msg">
                                <span class="mup-main-msg">click to upload images.</span>
                                <span class="mup-msg" id="max-upload-number">Upload up to 10 images</span>
                                <span class="mup-msg">Only image files are allowed for upload</span>
                            </div>
                        </div>
                        <form class="forms-sample mx-auto d-flex justify-content-center" id="exo"
                            enctype="multipart/form-data" action="/admin/uploads" method="post">



                            <button type="submit" class="btn btn-primary mr-2">
                                Upload
                            </button>

                        </form>

                    </div>



                    {{#if pictures}}
                    <div class="grid image-grid">
                        {{#each pictures}}
                        <div class="grid-block">
                            <div class="tile">
                                <a class="tile-link" href={{imgdir}}>
                                    <img class="tile-img tile-img{{@index}}" src="{{{imgdir}}}" alt="Image">

                                </a>
                                <div class="d-flex justify-content-end text-dark">
                                    <div class="d-flex justify-content-between pr-3" style="width:45%;">
                                        {{!-- <input type="checkbox" value={{pixname}}> --}}

                                        <a href={{imgdir}} class="fas fa-download" style="color:gray;" download
                                            target="_blank"></a>
                                        <a href="/admin/deletepix/{{pixname}}" class="fas fa-trash"
                                            style="color:gray;"></a>

                                    </div>
                                </div>


                            </div>
                        </div>
                        {{/each}}


                    </div>
                    <div style="display: flex;justify-content:end;" class="pr-2 py-3 mt-2">

                        <a title="delete all pictures" style="font-family: cursive;;text-transform:capitalize"
                            href="/admin/deleteall/{{student.userid}}" class="ttooltip text-muted"><i class="fas fa-trash"></i>
                             pictures
                        </a>

                    </div>


                    {{/if}}

                </div>







            </div>

            <div style="display: flex;justify-content:end;" class=" pr-2" >
                <a  title="delete account ?" class="ttooltip" style="font-family: cursive;color:red;text-transform:capitalize"
                    href="/admin/delete/{{student.userid}}">Delete </a>
            </div>

        </div>






    </div>
</div>
</div>

</div>