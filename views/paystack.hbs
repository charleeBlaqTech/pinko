<style>
    .imgg img {
        height: 45vh;
        width: 60%;
        object-fit: contain;
        padding: 2px;
        border-radius: 20px;
    }

    .gridit {
        display: grid;
        grid-template-columns: 1fr 2fr;
        border: 2px solid black;
        padding: 20px 1%;
