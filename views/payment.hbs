<div class="container-fluid  " style="background-color: #3694db;">
    <div class="d-flex flex-column align-items-center justify-content-center" style="">
        <h1 class="font-weight-semi-bold text-uppercase text-light">Checkout</h1>
        
    </div>
</div>
<!-- Page Header End -->


<!-- Checkout Start -->
<form action="/parent/confirmpayment" method="post">
    <div class="container-fluid pt-5">
        <div class="row px-xl-5">
            <div class="col-lg-8">
                <div class="mb-4">
                    <h4 class="font-weight-semi-bold mb-4">Shipping Address</h4>
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label>First Name</label>
                            <input required name="sname" class="form-control" type="text" placeholder="Rashid">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Last Name</label>
                            <input required name="ssurname" class="form-control" type="text" placeholder="Sheikh">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>E-mail</label>
                            <input required class="form-control" type="text" placeholder="example@email.com">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Mobile No</label>
                            <input required class="form-control" type="text" placeholder="+123 456 789">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Address Line 1</label>
                            <input required class="form-control" type="text" placeholder="123 Street">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Address Line 2</label>
                            <input required class="form-control" type="text" placeholder="123 Street">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>UAE</label>
                            <select class="custom-select" required>
                                <option value="">Select state</option>
                                <option value="AZ">Abu Dhabi</option>
                                <option value="AJ">Ajman</option>
                                <option value="DU">Dubai</option>
                                <option value="FU">Fujairah</option>
                                <option value="RK">Ras al-Khaimah</option>
                                <option value="SH">Sharjah</option>
                                <option value="UQ">Umm al-Quwain</option>
                            </select>
                        </div>
                        <div class="col-md-6 form-group">
                            <label>City</label>
                            <input required class="form-control" type="text" placeholder="Dubai" required>
                        </div>
                        
                    </div>
                </div>
                
            </div>
            <div class="col-lg-4">
                <div class="card border-secondary mb-3">
                    <div class="card-header border-0" style="background-color: #3694db;">
                        <h4 class="font-weight-semi-bold m-0">Order Total</h4>
                    </div>
                    <div class="card-body">
                        {{!-- <h5 class="font-weight-medium mb-3">Products</h5> --}}
                        
                        <hr class="mt-0">
                        <div class="d-flex justify-content-between mb-3 pt-1">
                            <h6 class="font-weight-medium">Gross</h6>
                            <h6 class="font-weight-medium">AED {{gross}}</h6>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h6 class="font-weight-medium">Shipping</h6>
                            <h6 class="font-weight-medium">AED {{vat}}</h6>
                            <input type="hidden" value={{vat}}>
                        </div>
                    </div>
                    <div class="card-footer border-secondary bg-transparent">
                        <div class="d-flex justify-content-between mt-2">
                            <h5 class="font-weight-bold">Total</h5>
                            <h5 class="font-weight-bold">AED {{total}}</h5>
                        </div>
                    </div>
                </div>
                <div class="card border-secondary mb-5">
                    <div class="card-header border-0"  style="background-color: #0964aa;">
                        <h4 class="font-weight-semi-bold m-0">Payment</h4>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <div class="custom-control custom-radio">
                                <input required type="radio" class="custom-control-input" name="payment" id="paypal">
                                <label class="custom-control-label" for="paypal">Paypal</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="custom-control custom-radio">
                                <input required type="radio" class="custom-control-input" name="payment" id="directcheck">
                                <label class="custom-control-label" for="directcheck">Direct Check</label>
                            </div>
                        </div>
                        <div class="">
                            <div class="custom-control custom-radio">
                                <input required type="radio" class="custom-control-input" name="payment" id="banktransfer">
                                <label class="custom-control-label" for="banktransfer">Bank Transfer</label>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer border-secondary bg-transparent">
                        <button class="btn btn-lg btn-block text-light font-weight-bold my-3 py-3"  style="background-color:#0964aa;" type="submit">Place Order</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>
<!-- Checkout End -->

